<launch>
  <!-- 多臂闭环专用 bringup：一个 include 对应一台机械臂 -->
  <arg name="robot_ns" default="jaka1" />
  <arg name="robot_ip" default="192.168.1.100" />

  <group ns="$(arg robot_ns)">
    <!-- 关键：在 group ns 下设置相对名 ip => /jakaX/ip（避免全局 /ip） -->
    <param name="ip" value="$(arg robot_ip)" />

    <!-- 再提供私有参数，兼容 driver 可能用 ~ip 或 ~robot_ip 读取 -->
    <node pkg="jaka_driver" type="jaka_driver" name="jaka_driver" output="screen">
      <param name="ip" value="$(arg robot_ip)" />
      <param name="robot_ip" value="$(arg robot_ip)" />
    </node>
  </group>
</launch>
